extends ./layout/layout
block content
    h1 Add User
    form(action="/", method="POST")
        .form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", required=true)
        .form-group
            label(for="birth") Birthday:
            input.form-control(name="birth", type="date", required=true)
        button.btn.btn-primary(type="submit") Add
